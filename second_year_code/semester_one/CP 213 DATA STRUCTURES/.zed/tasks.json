[
  {
    "label": "Build C++",
    "command": "g++",
    "args": ["-std=c++20", "-Wall", "$ZED_FILE", "-o", "${ZED_STEM}"],
    "cwd": "$ZED_DIRNAME",
  },
  {
    "label": "Run C++",
    "command": "./${ZED_STEM}",
    "cwd": "$ZED_DIRNAME",
  },
  {
    "label": "Build & Run C++",
    "command": "g++ -std=c++20 -Wall \"$ZED_FILE\" -o \"${ZED_STEM}\" && ./${ZED_STEM}",
    "cwd": "$ZED_DIRNAME",
  },
  {
    "label": "Compile Java",
    "command": "javac",
    "args": ["$ZED_FILE"],
    "cwd": "$ZED_DIRNAME",
  },
  {
    "label": "Run Java",
    "command": "java",
    "args": ["$ZED_STEM"],
    "cwd": "$ZED_DIRNAME",
  },
  {
    "label": "Run Python",
    "command": "python",
    "args": ["$ZED_FILE"],
  },
]
